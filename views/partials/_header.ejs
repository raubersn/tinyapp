<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success" style="padding-top: 0px;padding-bottom: 0px;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>        
      </div>
    </div>

    
      <form class="form-inline" action="/logout" method="POST" style="margin-top: 7px; margin-bottom: 7px;">
        <div class="form-inline navbar-nav">
          <% if (!user) { %>
            <!--If the user is not logged, shows the links to register or log in-->
            <a class="nav-item nav-link" href="/login">Login</a>  
            <a class="nav-item nav-link" href="/register">Register</a>            
          <% } else { %>
            <!--If the user is logged, shows their information and a link to logout-->
            <label style="width: 300px; margin: 1em">Logged In As: <%=user.email%>!</label>
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          <% } %>
        </div>
      </form>
  </nav>  
</header>